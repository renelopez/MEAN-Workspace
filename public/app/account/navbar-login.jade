.navbar-right(ng-controller="mvNavBarLoginCtrl as vm")
   form.navbar-form(ng-hide='vm.identity.isAuthenticated()')
      ul.nav.navbar-nav
        li
         a(href='/signup') Sign up
      .form-group
         input.form-control(placeholder="Email",ng-model="vm.username")
      .form-group
         input.form-control(placeholder="Password",ng-model="vm.password")
      button.btn.btn-primary(ng-click="vm.signin(vm.username,vm.password)") Sign In
   ul.nav.navbar.navbar-nav.navbar-right(ng-show='vm.identity.isAuthenticated()')
      li.dropdown
         a.dropdown-toggle(href="", data-toggle="dropdown") {{vm.identity.currentUser.firstName + vm.identity.currentUser.lastName }}
            span.caret
         ul.dropdown-menu
            li
               a(href='/admin/users') User List
            li
               a(href='', ng-click='vm.logout()') Log Off